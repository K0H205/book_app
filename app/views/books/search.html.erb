<% provide(:title, '本検索/登録') %>
<div class ="search_box">
  <%= form_with(url: search_path, method: :get, local: true) do |form| %>
    <%= form.text_field :book, name: "keyword", :placeholder => "キーワードを入力" %>
    <%= button_tag :type => "submit" do %><i class="fa fa-search"></i><% end %>  
  <% end %>
</div>
<div class="book_lst">
  <%= render 'books/list' %>
</div>

